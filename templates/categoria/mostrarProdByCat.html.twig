{% extends 'base.html.twig' %}

{% block title %}{{ nombreCategoria }}{% endblock %}

{% block body %}

    <div class="container p-3">
       {#  <div class="col-md-8"> #}
        <div class="row mt-5 justify-content-center">
    {% for producto in productos %}
        
                <div class="card text-center mx-2 mb-4"  style="width: 18rem;" >
                    <a href="{{ path('mostrarProducto', {'id':producto.id}) }}"><img class="card-img-top" src="{{ asset('uploads/imagenesProd/' ~ producto.imagen) }}" alt="{{ producto.nombre }}" title="Ver producto : {{ producto.nombre }}"/></a>

                    <div class="card-body">
                        <h5 class="card-title">{{ producto.nombre }}</h5>
                        <p class="card-text">{{ producto.descripcion }}</p>
                        <a href="{{ path('carrito_add', {'id':producto.id}) }}" class="btn btn-primary btnAjax">AÃ±adir a la cesta</a>
                    </div>
                </div>   

    {% endfor %}

         </div>

        <div id="path-ajax" data-path="{{path('ajax_request')}}"></div>
        <input type="number" value="1" id="quantity_input" style="display:none;"/>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('resources/js/main.js') }}"></script>
{% endblock %}

